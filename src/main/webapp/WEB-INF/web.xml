<?xml version="1.0" encoding="UTF-8"?>

<web-app 
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">

  <!-- insert servlet stuff here -->
    <servlet>
        <servlet-name>ConnServlet</servlet-name>
        <servlet-class>uts.asd.controller.ConnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>uts.asd.controller.RegisterServlet</servlet-class>
    </servlet>    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>uts.asd.controller.LogoutServlet</servlet-class>
    </servlet>  
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>uts.asd.controller.LoginServlet</servlet-class>
    </servlet>     
    <servlet>
        <servlet-name>AdminManagementServlet</servlet-name>
        <servlet-class>uts.asd.controller.AdminManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomServlet</servlet-name>
        <servlet-class>uts.asd.controller.RoomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomFilterServlet</servlet-name>
        <servlet-class>uts.asd.controller.RoomFilterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewRoomServlet</servlet-name>
        <servlet-class>uts.asd.controller.ViewRoomServlet</servlet-class>
    </servlet> 
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>uts.asd.controller.UpdateServlet</servlet-class>
    </servlet> 

    <!-- insert servlet mapping stuff here -->
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminManagementServlet</servlet-name>
        <url-pattern>/AdminManagementServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoomServlet</servlet-name>
        <url-pattern>/RoomServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoomFilterServlet</servlet-name>
        <url-pattern>/RoomFilterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRoomServlet</servlet-name>
        <url-pattern>/ViewRoomServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/UpdateServlet</url-pattern>
    </servlet-mapping>

    <!-- yo whats up -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
